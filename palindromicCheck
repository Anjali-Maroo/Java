import java.util.Scanner;
class exp3 {
    public static void main(String[]args){
    Scanner sc = new Scanner(System.in);
    System.out.print("Enter integer: ");
    int n = sc.nextInt();
    int original = n;
    int reversed =0;
    while (n != 0) {
            reversed = (reversed * 10) + (n % 10);
            n = n / 10;
    }
    if(original==reversed){
        System.out.print("given number is palindromic");
    }
    else{
        System.out.print("given number is not palindromic");
    }
    sc.close();
}
}
